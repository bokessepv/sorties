{% extends 'base.html.twig' %}

{% block title %}

{{ parent() }} - Afficher une sortie

{% endblock %}

{% block body %}

    <h2 class="title-page"> Afficher une sortie</h2>
    <div class="row" style="text-align: center">
        <div class="column">
            <div class="card">
                <p>Nom de la sortie: {{ sortie.nom }}</p>
                <p>Date et heure de la sortie: {{ sortie.dateHeureDebut|date("d/m/Y h:m:s") }}</p>
                <p>Date limite d'inscription: {{ sortie.dateLimiteInscription| date("d/m/Y") }}</p>
                <p>Nombre de places:{{ participants }} /{{sortie.nbInscriptionMax}} </p>
                <p>Dur√©e: {{ sortie.duree }} minutes</p>
                <p>Description et infos: {{ sortie.infosSortie}}  </p>
            </div>
        </div>
        <div class="column">
            <div class="card">
                <p>{{ sortie.campusOrganisateur.nom }}</p>
                <p>{{ sortie.lieu.nom }}</p>
                <p>{{ sortie.lieu.rue }}</p>
                <p>{{ sortie.lieu.ville.codePostal }}</p>
                <p>{{ sortie.lieu.latitude }}</p>
                <p>{{ sortie.lieu.longitude }}</p>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="column">
            <div class="card">
                <table>
                    <thead>
                    <tr>
                        <th>Pseudo</th>
                        <th>Nom</th>
                        <th>Ville</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td>user1</td>
                        <td>nom</td>
                        <td>ville</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

