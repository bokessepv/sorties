{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Connexion{% endblock %}

{% block body %}
    <div class="container mt-3">
        <div class="row">
            <div class="col-lg-6">
            </div>
            <div class="col-lg-6">
                <form method="post" class="ml-5 w-50">
                    {% if error %}
                        <div class="alert alert-danger mt-3">Mot de passe ou identifiant invalide</div>
                    {% endif %}

                    <h1 class="h3 mb-3 font-weight-normal">Connexion</h1>
                    <label for="inputEmail">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                    <label for="inputPassword">Password</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        <div class="checkbox ">
                            <label for="_remember_me">Se souvenir de moi<input type="checkbox" name="_remember_me"></label>
                        </div>
                    <div class="inscription">
                        <a href="{{ path('app_register') }}">Creer un compte</a>

                    </div>
                    <button class="btn btn-lg btn-primary" type="submit">
                        Connexion
                    </button>
                 </form>
            </div>
        </div>
    </div>
{% endblock %}
