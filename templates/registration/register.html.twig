{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Inscription{% endblock %}

{% block body %}
    <div class="jumbotron text-center">
        <h1>Inscription</h1>
    </div>
    <div class="container">
        {% form_theme registrationForm 'bootstrap_5_layout.html.twig' %}

        {{ form_start(registrationForm) }}

        {{ form_row(registrationForm.pseudo) }}
        {{ form_row(registrationForm.firstname) }}
        {{ form_row(registrationForm.lastname) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.telephone) }}
        {{ form_row(registrationForm.campus) }}
        {{ form_row(registrationForm.plainPassword) }}
        {{ form_row(registrationForm.photo) }}

        <div class="mt-2 mb-2">
            <button type="submit" class="btn btn-outline-primary ">Cr√©er</button>
        </div>

        {{ form_end(registrationForm) }}
    </div>


{% endblock %}
